@test-ifx-debug
options install --prefix testbuild
options --compiler ifx 
options --flag "-O0 -g -check all -traceback -warn all -fstack-security-check -fstack-protector-all -fno-omit-frame-pointer -pedantic"

@test-ifx-release
options install --prefix testbuild
options --compiler ifx 
options --flag "-O3 -fp-model=fast -g1 -traceback"

@test-gfortran-debug
options install --prefix testbuild
options --compiler gfortran 
options --flag "-O0 -g -fcheck=all -fbacktrace -Wall -Wextra -pedantic"

@test-gfortran-release
options install --prefix testbuild
options --compiler gfortran 
options --flag "-O3 -ffast-math -g1 -fbacktrace"

@localbuild
options build 
options --compiler ifx 
options --flag "-g1 -traceback -O3 -fp-model=fast -xHost" 
options --link-flag "-static-intel -qopenmp-link=static"

@localinstall
options install 
options --compiler ifx 
options --flag "-g1 -traceback -O3 -fp-model=fast -xHost" 
options --link-flag "-static-intel -qopenmp-link=static" 
options --no-rebuild --prefix "/usr/local"